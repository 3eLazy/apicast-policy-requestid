{
  "$schema": "http://apicast.io/policy-v1.1/schema#manifest#",
  "name": "Generate RqUUID and delete unsecured headers",
  "summary": "This is use for Generate RqUUID.",
  "description":
  ["This policy allows Generate RqUUID and set it to request header, logs request and response payload. and delete all unsecured headers"],
  "version": "0.1",
  "configuration": {
    "type": "object",
    "definitions": {
      "headers": {
        "description": "List of headers to deleted",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "header": {
              "description": "Header to be deleted",
              "type": "string"
            }
          },
          "required": ["header"]
        }
      }
    },
    "properties": {
      "to_header": {
        "description": "Header to store generated RqUUID.",
        "type": "string"
      },
      "headers": { "$ref": "#/definitions/headers" }
    }
  }
}